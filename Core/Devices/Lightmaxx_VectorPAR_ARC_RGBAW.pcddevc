  <slider name="stroboslider" top="190" left="190" width="160" height="20" action="strobosliderchange" startvalue="0" endvalue="255" default="0"/>
  <slider name="whiteslider" top="50" left="190" width="160" height="20" action="whitesliderchange" startvalue="0" endvalue="255" default="0"/>
  <slider name="amberslider" top="100" left="190" width="160" height="20" action="ambersliderchange" startvalue="0" endvalue="255" default="0"/>
  <slider name="macroslider" top="230" left="190" width="160" height="20" action="macrosliderchange" startvalue="0" endvalue="255" default="0"/>
