  <label name="label1" top="255" left="10" width="43" height="13" caption="Zeit [ms]:"/>
  <label name="label4" top="130" left="190" width="40" height="10" caption="Dimmer:"/>
  <label name="Label3" top="170" left="190" width="60" height="10" caption="Stroboskop:"/>
  <label name="Label4_96" top="30" left="190" width="30" height="10" caption="Weiß:"/>
  <label name="Label5_404" top="80" left="190" width="30" height="10" caption="Amber:"/>
  <label name="Label7_856" top="210" left="190" width="40" height="10" caption="Makros:"/>
  <label name="Label7_857" top="250" left="190" width="70" height="10" caption="Makro-Speed:"/>
